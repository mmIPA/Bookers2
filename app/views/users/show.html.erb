<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'shared/userinfoNewbook' %>
  </div>
  
  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
    </table>
    </div>
  </div>
</div>
 