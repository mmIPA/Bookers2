<div class="row">
  <div class="col-3">
    <%= render 'shared/userinfoNewbook' %>
  </div>

<div class="col-9">
  <h1>Users</h1>
    <table class="table">
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
      
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </table>
 </div>
</div>