<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'shared/userinfoNewbook', user: @user, book: @new_book %>
    </div>

<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  
  <table class="table">
    <tr>
      <td>
        <%= link_to user_path(@user.id) do %>
        <%= image_tag @user.get_profile_image(100,100) %><br>
        <%= link_to @book.user.name, user_path(@user.id) %>
        <% end %>
      </td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
    <% if current_user && current_user.id == @book.user_id %>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
      <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger" %></td>
    <% end %>
    </tr>
  </table>
    </div>
  </div>
</div>